<Page x:Class="FittsLawTester.Part1_Study"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FittsLawTester"
      mc:Ignorable="d" 
      Title="Part1_Study">

    <Grid x:Name="Grid" Height="600" Width="1000" Background="Transparent" MouseLeftButtonDown="Grid_MouseLeftButtonDown">
        <Button x:Name="Start" Content="Start" HorizontalAlignment="Left" VerticalAlignment="Top" Width="1cm" Height="1cm" Background="Black" Foreground="White" Click="button_Click" Focusable="False"/>
        <Button x:Name="Target" Content="" HorizontalAlignment="Left" VerticalAlignment="Top" Width="1cm" Height="1cm" Background="Lime" Click="Target_Click" Focusable="False"/>
        <Label x:Name="label" Content="" HorizontalAlignment="Left" Margin="0" VerticalAlignment="Top" Height="40" Width="300" FontSize="15pt"/>
        <Label x:Name="Time" Content="" HorizontalAlignment="Left" Margin="0" VerticalAlignment="Top" Height="32" Width="200" FontSize="12pt"/>
    </Grid>
</Page>
